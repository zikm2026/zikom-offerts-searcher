# Server Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_VERSION=v1

# Security
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Admin panel (Basic Auth) – w produkcji ustaw silne hasło
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Database (Docker: postgres na porcie 5433, żeby nie kolidować z lokalnym PG)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/zikom

# CORS
CORS_ORIGIN=http://localhost:3000

# Email Configuration (home.pl: host IMAP weź z Panelu: Poczta → Opcje skrzynki → Serwery pocztowe, np. serwer123.home.pl)
# W produkcji z wieloma instancjami: ustaw ENABLE_EMAIL_SERVICE=true tylko na JEDNEJ instancji (reszta = false)
ENABLE_EMAIL_SERVICE=true
EMAIL_USER=twoj-email@domena.pl
EMAIL_PASSWORD=twoje-haslo
EMAIL_HOST=serwer123.home.pl
EMAIL_PORT=993
EMAIL_TLS=true
EMAIL_CHECK_INTERVAL=60000
# Limit czasu (ms) na przetworzenie jednego maila – zapobiega nieskończonej pętli (domyślnie 120000 = 2 min)
EMAIL_PROCESS_TIMEOUT_MS=120000

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
